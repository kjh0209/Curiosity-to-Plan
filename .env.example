# Database
DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="여기에32자이상의랜덤시크릿을입력하세요"

# ===========================================
# Gemini AI Configuration
# ===========================================

# 공유 Gemini API 키 (폴백용 - 필수)
# https://aistudio.google.com/app/apikey 에서 발급
GEMINI_API_KEY="여기에_Gemini_API_키_입력"

# 사용자 키 식별자 생성용 시크릿
GEMINI_PROVISIONING_SECRET="임의의시크릿입력"

# ===========================================
# Google Cloud - 사용자별 독립 API 키 발급용 (선택사항)
# ===========================================

# Google Cloud 프로젝트 ID
# 예: skillloop-prod-12345
GOOGLE_CLOUD_PROJECT="여기에_프로젝트_ID_입력"

# 서비스 계정 키 파일 경로 (JSON)
# 프로젝트 루트 기준 상대 경로 또는 절대 경로
GOOGLE_APPLICATION_CREDENTIALS="./service-account-key.json"

# ===========================================
# OpenAI (Optional)
# ===========================================
# 사용자가 프로필에서 직접 입력하므로 서버 키는 선택사항
# OPENAI_API_KEY="sk-..."
